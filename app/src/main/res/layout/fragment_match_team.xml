<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MyActivities.MatchTypeActivity">

    <Spinner
        android:id="@+id/spinnerTeamAf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />

    <Spinner
        android:id="@+id/spinnerTeamBf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
 />

    <EditText
        android:id="@+id/etTeamASc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Team A Score"
        android:inputType="number" />

    <EditText
        android:id="@+id/etTeamBSc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Team B Score"
        android:inputType="number" />

    <Button
        android:id="@+id/button_confirm_results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="440dp"
        android:text="Add Result" />

</LinearLayout>