<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="8"
    tools:context=".ui.SubcollectionFragment.IndiMatchFragment">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:textSize="18sp"
        android:text="Below are the results of the selected match"
         />

    <ListView
        android:id="@+id/lvIndiAthlete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:layout_weight="7"
        app:layout_constraintBottom_toTopOf="@+id/textAnn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.0"></ListView>
    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="50dp"
        android:layout_weight="1"
        android:orientation="horizontal">
         <TextView
        android:id="@+id/textNam"
        android:layout_width="279dp"
        android:layout_height="41dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="280dp"
        android:layout_weight="1"
        android:textSize="18sp"
        android:text="The winner is : "
              />
         <TextView
        android:id="@+id/textAnn"
        android:layout_width="279dp"
        android:layout_height="41dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="280dp"
        android:layout_weight="1"
        android:textSize="18sp"
        android:textColor="@color/green"
        android:text=""
              />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/textSc"
        android:layout_width="279dp"
        android:layout_height="41dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="280dp"
        android:layout_weight="1"
        android:text="With a score of :"
        android:textSize="18sp" />
        <TextView
            android:id="@+id/textAnnScore"
            android:layout_width="279dp"
            android:layout_height="41dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="280dp"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/green"
            android:textSize="18sp" />
</LinearLayout>
</LinearLayout>