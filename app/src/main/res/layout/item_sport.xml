<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/athleteTable"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5sp"
    android:layout_marginStart="5sp"
    android:layout_marginLeft="5sp"
    android:layout_marginTop="5sp"
    android:layout_marginEnd="5sp"
    android:layout_marginRight="5sp"
    android:layout_marginBottom="5sp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10sp"
        android:paddingLeft="5sp"
        android:paddingTop="5sp"
        android:paddingRight="5sp"
        android:paddingBottom="5sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="122dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView

                android:id="@+id/tvSportIDLabel"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:text="Sport ID Number : " />
            <TextView

                android:id="@+id/tvIDsport"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:layout_marginStart="12sp"
                android:layout_marginLeft="12sp"
                android:text="Sport ID Number " />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView

                android:id="@+id/tvNameLabel"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Name : " />

            <TextView

                android:id="@+id/tvSportName"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginStart="12sp"
                android:layout_marginLeft="12sp"
                android:text="Name" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView

                android:id="@+id/tvTypeLabel"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"


                android:text="Sport type:" />
            <TextView

                android:id="@+id/tvSportType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Type"
                android:layout_marginStart="12sp"
                android:layout_marginLeft="12sp"/>


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView

                android:id="@+id/tvLabelGender"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:text="Gender: " />
            <TextView

                android:id="@+id/tvSportGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:layout_marginStart="12sp"
                android:layout_marginLeft="12sp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>